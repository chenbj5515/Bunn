{
  "api_paths": {
    "ai": "src/app/api/openai/completion",
    "stream_ai": "src/app/api/openai/stream",
    "vision_ai": "src/app/api/openai/extract-subtitles"
  },
  "search_paths": {
    "components": "src/components",
    "lib": "src/lib",
    "api": "src/app/api"
  },
  "i18n_paths": {
    "messages": "messages",
    "config": "src/i18n",
    "middleware": "src/middleware.ts"
  },
  "i18n_schema": {
    "type": "next-intl",
    "mode": "with-i18n-routing",
    "docs": "https://next-intl.dev/docs/getting-started/app-router/with-i18n-routing"
  },
  "package_manager": "pnpm",
  "ui_library": {
    "name": "shadcn",
    "package": "shadcn"
  },
  "context_resolution": {
    "priority_paths": ["docs"],
    "behavior": "read_docs_first"
  },
  "next_config": {
    "path": "next.config.ts"
  }
} 